    {
      "name": "Contratos (Contracts)",
      "item": [
        {
          "name": "Upload Contract PDF",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": {
              "raw": "{{base_url}}/api/contratos",
              "host": ["{{base_url}}"],
              "path": ["api", "contratos"]
            },
            "body": {
              "mode": "formdata",
              "formdata": [
                {
                  "key": "file",
                  "type": "file",
                  "src": "/path/to/contract.pdf"
                }
              ]
            }
          },
          "response": []
        },
        {
          "name": "Ask Question (RAG)",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              },
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "url": {
              "raw": "{{base_url}}/api/contratos/ask",
              "host": ["{{base_url}}"],
              "path": ["api", "contratos", "ask"]
            },
            "body": {
              "mode": "raw",
              "raw": "{\n  \"question\": \"¿Cuál es el valor mensual del servicio?\"\n}"
            }
          },
          "response": []
        }
      ]
    },
    {
