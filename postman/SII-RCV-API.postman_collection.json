{
  "info": {
    "name": "SII RCV API - Cloudflare Workers",
    "description": "API Collection for SII RCV integration with AI capabilities",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    {
      "key": "base_url",
      "value": "https://sii-rcv-api.juanirc.workers.dev",
      "type": "string"
    },
    {
      "key": "token",
      "value": "",
      "type": "string"
    },
    {
      "key": "test_rut",
      "value": "76123456-7",
      "type": "string"
    },
    {
      "key": "test_phone",
      "value": "+56911112222",
      "type": "string"
    },
    {
      "key": "agent_api_key",
      "value": "12a7035a667ae8f91dfdb9c1b2f4f0b2cff813c6e7b55f26bd7cd9e95bc68f17",
      "type": "string"
    }
  ],
  "item": [
    {
      "name": "Authentication",
      "item": [
        {
          "name": "Register User",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "url": {
              "raw": "{{base_url}}/api/register",
              "host": ["{{base_url}}"],
              "path": ["api", "register"]
            },
            "body": {
              "mode": "raw",
              "raw": "{\n  \"rut\": \"76123456-7\",\n  \"password\": \"miclave123\",\n  \"clave_sii\": \"claveSII123\",\n  \"telefono\": \"+56911112222\"\n}"
            }
          },
          "response": []
        },
        {
          "name": "Verify OTP",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "url": {
              "raw": "{{base_url}}/api/verify-otp",
              "host": ["{{base_url}}"],
              "path": ["api", "verify-otp"]
            },
            "body": {
              "mode": "raw",
              "raw": "{\n  \"rut\": \"{{test_rut}}\",\n  \"codigo\": \"123456\"\n}"
            }
          },
          "response": []
        },
        {
          "name": "Login",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "url": {
              "raw": "{{base_url}}/api/login",
              "host": ["{{base_url}}"],
              "path": ["api", "login"]
            },
            "body": {
              "mode": "raw",
              "raw": "{\n  \"rut\": \"{{test_rut}}\",\n  \"password\": \"miclave123\"\n}"
            }
          },
          "response": [],
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "var jsonData = pm.response.json();",
                  "pm.collectionVariables.set(\"token\", jsonData.token);"
                ],
                "type": "text/javascript"
              }
            }
          ]
        }
      ]
    },
    {
      "name": "Ventas (Sales)",
      "item": [
        {
          "name": "Get Sales Summary",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": {
              "raw": "{{base_url}}/api/ventas/resumen?periodo=2023-09",
              "host": ["{{base_url}}"],
              "path": ["api", "ventas", "resumen"],
              "query": [
                {
                  "key": "periodo",
                  "value": "2023-09"
                }
              ]
            }
          },
          "response": []
        },
        {
          "name": "Get Sales Detail",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": {
              "raw": "{{base_url}}/api/ventas/detalle?periodo=2023-09&tipo=33",
              "host": ["{{base_url}}"],
              "path": ["api", "ventas", "detalle"],
              "query": [
                {
                  "key": "periodo",
                  "value": "2023-09"
                },
                {
                  "key": "tipo",
                  "value": "33"
                }
              ]
            }
          },
          "response": []
        }
      ]
    },
    {
